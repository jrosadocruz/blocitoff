<% if @task.valid? %>
  $('.js-tasks').append("<%= escape_javascript(render(@task)) %>");
  $('.new-task').html("<%= escape_javascript(render partial: 'tasks/form', locals: { task: @new_task }) %>");
  $('#errors').html("<%= escape_javascript(render partial: 'shared/notifications') %>");
  $('#task-count').html("<%= @user.tasks.count %>");
<% else %>
  $('.new-task').html("<%= escape_javascript(render partial: 'tasks/form', locals: { task: @task }) %>");
  $('#errors').html("<%= escape_javascript(render partial: 'shared/notifications') %>");
<% end %>
